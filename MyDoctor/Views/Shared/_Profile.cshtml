



<style>
    .in01 {
        margin-left: 20%;
    }

        .in01:hover {
            cursor: pointer;
        }
</style>


<div class="container" style="padding-top: 60px;">

    <div class="row">

        <!-- Profile Image -->
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="text-center">
                <div class="img01">
                    <img id="image01" src="~/Templetes/Icons/png/user.png" alt="Profile Image" style="width:20%;height:20%;" /><br /><br /><br />
                </div>
                <h6>Upload a different photo...</h6>
                <input id="imgupload" type="file" class="text-center center-block well well-sm in01" accept="image/*">
            </div>

            <!--Change Password-->
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-outline-dark" style="margin:5% 0 0 30%;" data-toggle="modal" data-target="#ModalCenter" data-backdrop="false">
                Change Password
            </button>
            <!-- Modal -->
            <div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ModalCenterTitle">Change Password</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <h5>Old Password: </h5><input class="input-group-text" type="password" placeholder="Old Password" style="margin-left:15%;" required /><br />
                            <h5>New Password: </h5><input class="input-group-text" type="password" placeholder="New Password" style="margin-left:15%;" required /><br />
                            <h5> Confirm New Password: </h5><input class="input-group-text" type="password" placeholder="Confirm New Password" style="margin-left:15%;" required /><br />

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-primary float-none" style="width:50%">Save</button>
                            <button type="button" class="btn btn-outline-danger float-none " style="width:50%" data-dismiss="modal">Close</button>

                        </div>
                    </div>
                </div>
            </div>


            <!--Delete Account-->
            <!--Button Trigger model-->
            <button class="btn btn-outline-danger" style="margin:5% 0 0 30%;" value="Delete" data-toggle="modal" data-target="#DeleteAccount" data-backdrop="false">
                Delete My Account
            </button>

            <!--Model-->
            <div class="modal fade" id="DeleteAccount" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ModalCenterTitle">Delete Account</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <h4 class="font-weight-bold"> <strong class="text-warning text-lg-left" style="font-size:25px;">Warning!!</strong> Your account will be deleted permenantly</h4>
                            <h5 class="text-center">Are you sure you want to delete ?</h5>
                            <input class="input-group-text" type="password" placeholder="Enter Your Password" style="margin-left:25%;" required /><br />

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger float-none" style="width:50%">Delete</button>
                            <button type="button" class="btn btn-secondary float-none " style="width:50%" data-dismiss="modal">Close</button>

                        </div>
                    </div>
                </div>


            </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
            <h3>Personal info</h3>
            <form class="form-horizontal" role="form">

                <!-- Edit Full Name-->
                <div class="form-group">
                    <label class="col-lg-3 control-label">Your Name<span style="color:darkred;"> *</span></label>
                    <div class="col-lg-8">
                        <input class="form-control" value="Full Name Here" type="text" required>
                    </div>
                </div>

                <!--Edit Email Address-->
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email Address<span style="color:darkred;"> *</span></label>
                    <div class="col-lg-8">
                        <input class="form-control" value="Email Here" type="email" required>
                    </div>
                </div>

                <!--Edit Mobilr Number-->
                <div class="form-group">
                    <label class="col-lg-3 control-label">Mobile Number<span style="color:darkred;"> *</span></label>
                    <div class="col-lg-8">
                        <input class="form-control" value="Mobile number here" type="text" required>
                    </div>
                </div>

                <!--Edit Birth Of Date-->
                <div class="form-group">
                    <label class="col-lg-3 control-label">Birth Date<span style="color:darkred;"> *</span></label>
                    <div class="col-lg-8">
                        <input class="form-control" value="1/1/1998" type="date">
                    </div>
                </div>




                <!--footer of the edit form-->
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <input class="btn btn-outline-primary" value="Save Changes" type="button">
                        <span></span>
                        <input class="btn btn-default btn-outline-secondary" value="Cancel" type="reset">
                        <span></span>

                        </div>
                </div>
            </form>
        </div>
    </div>
</div>