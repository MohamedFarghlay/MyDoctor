
@model  MyDoctor.MyDoctorDB.User


<style>
    .in01 {
        margin-left: 20%;
    }

        .in01:hover {
            cursor: pointer;
        }
</style>


<div class="container" style="padding-top: 60px;">

    <div class="row">

        <!-- Profile Image -->
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="text-center">
                <div class="img01">
                    <img id="image01" src="~/Templetes/Icons/png/user.png" alt="Profile Image" style="width:20%;height:20%;" /><br /><br /><br />
                </div>
            </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
            <h3>Personal info</h3>
            <div class="form-horizontal" role="form">

                <!-- Edit Full Name-->
                <div class="form-group">
                    <label class="col-lg-3 control-label">Your Name<span style="color:darkred;"> *</span></label>
                    <div class="col-lg-8">
                        <input class="form-control" id="fullName" value="" type="text" readonly>
                    </div>
                </div>



                <!--Edit Email Address-->
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email Address<span style="color:darkred;"> *</span></label>
                    <div class="col-lg-8">
                        <input class="form-control" id="emailAddress" value="" type="email" readonly>
                    </div>
                </div>

                <!--Edit Mobilr Number-->
                <div class="form-group">
                    <label class="col-lg-3 control-label">Mobile Number<span style="color:darkred;"> *</span></label>
                    <div class="col-lg-8">
                        <input class="form-control" id="phoneNumber" value="" type="text" readonly>
                    </div>
                </div>

                <!--Edit Birth Of Date-->
                <div class="form-group">
                    <label class="col-lg-3 control-label">Birth Date<span style="color:darkred;"> *</span></label>
                    <div class="col-lg-8">
                        <input class="form-control" id="dateOfBirth" value="" type="date" readonly>
                    </div>
                </div>




            </div>
        </div>
    </div>
</div>

