@model IEnumerable<MyDoctor.MyDoctorDB.Appointment>

@{
    ViewBag.Title = "MyAppointments";
    Layout = null;
}
<br /><br /><br />

<!DOCTYPE html>
<html>
<head>
    <title>My Appointments</title>
    <meta name="viewport" content="width=device-width" />

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .date-of-appointment {
            font-size: 250%;
            margin-top: 3%;
        }

        .data-of-appointment {
            font-size: 200%;
        }
        .appointments-style{
            font-size:250%;

        }
        .btn-back{
            margin-left:40%;
            margin-top:10%;
        }
    </style>
</head>
<body>
    <header class="main_menu home_menu menu_fixed hide-header" style="height:7%;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <img src="~/Templetes/Index/img/favicon.png" alt="Logo" />
                        @*@Html.ActionLink("MyDoctor", "#", "Home", new { @class = "navbar-brand" })*@
                        <span class="navbar-brand">MyDoctor</span>
                        <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                     
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- Header part end-->


    @{ 
        if (Model != null)
        {
            <table class="text-center table date-of-appointment">
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.DoctorName)

                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.DateOfAppointment)

                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            
                            @Html.DisplayFor(modelItem => item.DoctorName)
                        </td>
                        <td>
                            <input type="date" value="@item.DateOfAppointment" disabled />
                            @*@Html.DisplayFor(modelItem => item.DateOfAppointment)*@
                        </td>

                    </tr>
                }

            </table>
        }

    }
    @{
        if (ViewBag.NotAppointments == "true")
        {
            <p class="text-center appointments-style"> You Don't Have Any Appointments Yet ! </p>
        }
    }
    @Html.ActionLink("<== Return To Dashboard", "PatientDashboard", "Patient", new { @class = "btn btn-outline-primary btn-back" })
</body>
</html>
