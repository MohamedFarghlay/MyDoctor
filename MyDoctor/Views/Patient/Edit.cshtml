@model MyDoctor.MyDoctorDB.User

@{
    ViewBag.Title = "Edit";
}


<style>

    .center-item{
        margin-left:95%;
        width:50%;
    }
    .center-pass{
        width:40%;
        margin-left:75%;
    }
    .btn-save{
        width:30%;
        margin-left:15%;
        position:absolute;
    }
    .btn-cancel{
          width:30%;
        margin-left:50%;
       position:absolute;
      
       margin-bottom:10%;
    }
    .label-center{
        margin-left:32%;
        color:#2f1636;
        
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div @*class="form-horizontal"*@ class="container text-center" style="padding-top: 60px;">
        <div class="row">
            <div class="col-md-8 col-sm-6 col-xs-12 personal-info">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                <h3 class="personal-info text-uppercase font-weight-bold" style="color:#232e2d;margin-left:53%;" >Edit Personal info</h3>
                <br /><br />
                <!--Edit First Name-->
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "col-lg-3 control-label label-center" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control center-item" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--Edit Last Name-->
                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "col-lg-3 control-label label-center" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control center-item" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--Edit Email Address-->
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-lg-3 control-label label-center" ,@style="margin-right:4%;" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Email,  new { htmlAttributes = new { @class = "form-control center-item" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>


                <!--Edit Phone Number-->
                <div class="form-group">
                    @Html.LabelFor(model => model.PhoneNumner, htmlAttributes: new { @class = "col-lg-3 control-label label-center",@style="margin-left:35%;" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.PhoneNumner, new { htmlAttributes = new { @class = "form-control center-item" } })
                        @Html.ValidationMessageFor(model => model.PhoneNumner, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--Edit Password-->
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-lg-3 control-label label-center" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control center-pass", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "col-lg-3 control-label label-center" ,@style="margin-left:37%;" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new {@class="center-item", @type = "date", @min = "1940-01-01", @max = "2005-01-1" } })
                        @Html.ValidationMessageFor(S => S.DateOfBirth, "", new { @class = "alert"})<br /><br />

                    </div>
                </div>

                @*<div class="form-group">
                    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control center-item" } })
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    </div>
                </div>*@





                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save Changes" class="btn btn-outline-primary btn-save" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Cancel" class="btn btn-outline-dark btn-cancel" disabled />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
